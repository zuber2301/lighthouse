{
  "name": "lighthouse",
  "version": "1.0.0",
  "description": "Employee recognition and rewards platform",
  "scripts": {
    "test": "./run-tests.sh",
    "test:backend": "cd backend && python -m pytest",
    "test:frontend": "cd frontend && npm test",
    "install:all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "dev": "concurrently \"cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 18000\" \"cd frontend && npm run dev\"",
    "build": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint",
    "format": "cd frontend && npm run format"
  },
  "keywords": ["recognition", "rewards", "employee", "platform"],
  "author": "Lighthouse Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}